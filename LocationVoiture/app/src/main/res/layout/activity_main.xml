<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!-- Titre -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Location voiture"
        android:textSize="70px"
        android:layout_gravity="center"
        android:textColor="@android:color/darker_gray" />

    <!-- Bouton Ajouter -->
    <Button
        android:id="@+id/btnAjouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_marginLeft="500px" />

    <!-- Bouton Lister -->
    <Button
        android:id="@+id/btnLister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lister"
        android:layout_marginLeft="500px" />

    <!-- Champ ID (Label sy EditText) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="50px"
        android:textColor="@android:color/black"
        android:layout_marginLeft="500px"
        android:layout_marginTop="20px" />

    <EditText
        android:id="@+id/edtID"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="Saisir l'ID"
        android:layout_gravity="right" />

    <!-- Bouton Supprimer -->
    <Button
        android:id="@+id/btnSupprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:layout_marginLeft="500px" />

    <!-- Bouton Modifier -->
    <Button
        android:id="@+id/btnModifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:layout_marginLeft="500px" />

    <!-- Formulaire d'entrée pour Nom/Prenom, Marque, N° Voiture -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-550px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom/Prenom"
            android:textSize="50px"
            android:textColor="@android:color/black"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px" />

        <EditText
            android:id="@+id/edtNomPrenom"
            android:layout_width="200dp"
            android:layout_marginRight="0px"
            android:layout_height="50dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marque"
            android:textSize="50px"
            android:textColor="@android:color/black"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px" />

        <EditText
            android:id="@+id/edtMarque"
            android:layout_width="200dp"
            android:layout_marginRight="0px"
            android:layout_height="50dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N° Voiture"
            android:textSize="50px"
            android:textColor="@android:color/black"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px" />

        <EditText
            android:id="@+id/edtNumeroVoiture"
            android:layout_width="200dp"
            android:layout_marginRight="0px"
            android:layout_height="50dp"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>
